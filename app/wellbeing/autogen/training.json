{
  "mantras": [
    {
      "text": "Ellazultam, nyugodt vagyok, semmi sem zavar."
    },
    {
      "text": "A jobb karom nehéz."
    },
    {
      "text": "A bal karom nehéz."
    },
    {
      "text": "Mindkét karom kellemesen nehéz."
    },
    {
      "text": "A jobb lábam nehéz."
    },
    {
      "text": "A bal lábam nehéz."
    },
    {
      "text": "Mindkét lábam kellemesen nehéz."
    },
    {
      "text": "Az egész testem kellemesen nehéz."
    },
    {
      "text": "A jobb karom meleg."
    },
    {
      "text": "A bal karom meleg."
    },
    {
      "text": "Mindkét karom kellemesen meleg."
    },
    {
      "text": "A jobb lábam meleg."
    },
    {
      "text": "A bal lábam meleg."
    },
    {
      "text": "Mindkét lábam kellemesen meleg."
    },
    {
      "text": "Az egész testem kellemesen meleg."
    },
    {
      "text": "A szívem nyugodtan és egyenletesen dobog."
    },
    {
      "text": "A légzésem nyugodt és egyenletes."
    },
    {
      "text": "A homlokom kellemesen hűvös."
    },
    {
      "text": "A napfény járja át a testem."
    },
    {
      "text": "Nyugodt vagyok."
    }
  ]
}
